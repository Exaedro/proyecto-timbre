<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- CSS personalizado -->
    <link rel="stylesheet" href="css/style.css">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
            <%- include('../parciales/adminsidebar.ejs') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                    <%- include('../parciales/adminnavbar.ejs') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">


                    <!-- Content Row -->
                    <div class="row">

                        <div class="col-md-12">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex align-items-center">
                                    <h6 class="m-0 font-weight-bold text-primary">Horarios diarios</h6>
                                    <a href="/panel/horarios/crear" class="btn btn-success ml-3">Agregar horario</a>
                                </div>
                                <div class="card-body container-fluid">
                                    <div class="row horarioContainer">
                                        <% horarios.forEach(horario => { %>
                                            <% if(horario.repetirDiariamente == true) { %>
                                                <% if(horario.modo == true) { %>
                                                    <div class="card border-success col-lg-3 col-md-6">
                                                        <div class="card-body">
                                                            <h5 class="fecha">Hora: <%- horario.partes.hora %>:<%- horario.partes.minuto %></h5>
                                                            <p>Modo: <span class="badge bg-success text-white">Encendido</span></p>
                                                            <a data-target="#modal<%- horario._id %>" data-toggle="modal" href="#">
                                                                <i class="bi bi-trash borrar"></i>
                                                            </a>
                                                            <a href="#">
                                                                <i class="bi bi-pencil-square editar"></i>
                                                            </a>
                                                        </div>                              
                                                    </div>
                                                <% } else { %>
                                                    <div class="card border-danger col-lg-3 col-md-6">
                                                        <div class="card-body">
                                                            <h5 class="fecha"><%- horario.fecha %></h5>
                                                            <p>Hora inicial: <%- horario.partes.hora %>:<%- horario.partes.minuto %></p>
                                                            <p>Hora final: <%- horario.parteFinal.hora %>:<%- horario.parteFinal.minuto %></p>
                                                            <p>Modo: <span class="badge bg-danger text-white">Apagado</span></p>
                                                            <a data-target="#modal<%- horario._id %>" data-toggle="modal" href="#">
                                                                <i class="bi bi-trash borrar"></i>
                                                            </a>
                                                            <a href="#">
                                                                <i class="bi bi-pencil-square editar"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                <% } %>
                                            <% } %>
                                        <%})%>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row">

                        <div class="col-md-12">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex align-items-center">
                                    <h6 class="m-0 font-weight-bold text-primary">Horarios</h6>
                                    <a href="/panel/horarios/crear" class="btn btn-success ml-3">Agregar horario</a>
                                </div>
                                <div class="card-body container-fluid">
                                    <div class="row horarioContainer">
                                        <% horarios.forEach(horario => { %>
                                            <% if(horario.repetirDiariamente == true) return %>
                                            
                                            <% if(horario.modo == true) { %>
                                                <div class="card border-success col-lg-3 col-md-6">
                                                    <div class="card-body">
                                                        <h5 class="fecha"><%- horario.fecha %></h5>
                                                        <p>Hora: <%- horario.partes.hora %>:<%- horario.partes.minuto %></p>
                                                        <p>Modo: <span class="badge bg-success text-white">Encendido</span></p>
                                                        <a data-target="#modal<%- horario._id %>" data-toggle="modal" href="#">
                                                            <i class="bi bi-trash borrar"></i>
                                                        </a>
                                                        <a href="#">
                                                            <i class="bi bi-pencil-square editar"></i>
                                                        </a>
                                                    </div>                              
                                                </div>
                                            <% } else { %>
                                                <div class="card border-danger col-lg-3 col-md-6">
                                                    <div class="card-body">
                                                        <h5 class="fecha"><%- horario.fecha %></h5>
                                                        <p>Hora inicial: <%- horario.partes.hora %>:<%- horario.partes.minuto %></p>
                                                        <p>Hora final: <%- horario.parteFinal.hora %>:<%- horario.parteFinal.minuto %></p>
                                                        <p>Modo: <span class="badge bg-danger text-white">Apagado</span></p>
                                                        <a data-target="#modal<%- horario._id %>" data-toggle="modal" href="#">
                                                            <i class="bi bi-trash borrar"></i>
                                                        </a>
                                                        <a href="#">
                                                            <i class="bi bi-pencil-square editar"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            <% } %>
                                        <%})%>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmaciones -->
    <% horarios.forEach(horario => { %>
        <div class="modal fade" id="modal<%- horario._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <form action="/panel/horarios/<%- horario._id %>/eliminar" method="POST">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">¿Seguro que querés eliminarlo?</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                            <button class="btn btn-primary" type="submit">Borrar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    <% }) %>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/chart-area-demo.js"></script>
    <script src="js/demo/chart-pie-demo.js"></script>

</body>

</html>